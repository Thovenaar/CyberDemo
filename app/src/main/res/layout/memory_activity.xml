<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/help_background"
    tools:context="dehaagsehogeschool.digiveilig.games.MemoryActivity">

    <ImageView
        android:id="@+id/memory_text"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/memory_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/memory_text" />

    <TextView
        android:id="@+id/memory_level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/bree_serif"
        android:text="@string/memory_level_text"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memory_text" />

    <ImageView
        android:id="@+id/memory_timer_logo"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/timer_description"
        app:layout_constraintStart_toEndOf="@+id/memory_level_text"
        app:layout_constraintTop_toBottomOf="@+id/memory_text"
        app:srcCompat="@drawable/timer_icon" />

    <TextView
        android:id="@+id/memory_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/memory_timer_logo"
        app:layout_constraintTop_toTopOf="@+id/memory_timer_logo" />

    <Button
        android:id="@+id/memory_stop_button"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_shape_grey_round"
        android:fontFamily="@font/bree_serif"
        android:text="@string/memory_stop_button"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="stopMemory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memory_level_text">

        <ImageView
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/memory_card"
            android:onClick="buttonClick"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="123dp" />

        <ImageView
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/memory_card"
            android:onClick="buttonClick"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="123dp" />

        <ImageView
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/memory_card"
            android:onClick="buttonClick"
            tools:layout_editor_absoluteX="238dp"
            tools:layout_editor_absoluteY="103dp" />

        <ImageView
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/memory_card"
            android:onClick="buttonClick"
            tools:layout_editor_absoluteX="238dp"
            tools:layout_editor_absoluteY="103dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <ImageView
            android:id="@+id/button5"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/memory_card"
            android:onClick="buttonClick"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="123dp" />

        <ImageView
            android:id="@+id/button6"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/memory_card"
