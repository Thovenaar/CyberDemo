<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test"
    tools:context="dehaagsehogeschool.cyberdemo.HomeActivity">

    <ImageView
        android:id="@+id/Home_logo"
        android:layout_width="78dp"
        android:layout_height="71dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="132dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/Home_logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bree_serif"
        android:text="@string/cyberdemo"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/Home_logo"
        app:layout_constraintTop_toTopOf="@+id/Home_logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bree_serif"
        android:text="Test je kennis op het gebied van internetveiligheid"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Home_logo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="191dp"
            android:layout_height="38dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/home_button_shape"
            android:text="Test je kennis!"
            android:textColor="#E0E0E0"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="191dp"
            android:layout_height="38dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/home_button_shape"
            android:textColor="#E0E0E0"
            android:text="Highscores"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="191dp"
            android:layout_height="38dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/home_button_shape"
            android:textColor="#E0E0E0"
            android:text="Help"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
