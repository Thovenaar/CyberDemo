<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal ="true" android:layout_centerVertical="true"
    tools:context="dehaagsehogeschool.cyberdemo.HomeActivity">

    <ImageView
        android:id="@+id/Home_logo"
        android:layout_width="78dp"
        android:layout_height="71dp"
        android:layout_above="@+id/textView3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginBottom="65dp"
        android:layout_marginStart="48dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/Home_logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignTop="@+id/Home_logo"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bree_serif"
        android:text="@string/cyberdemo"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/Home_logo"
        app:layout_constraintTop_toTopOf="@+id/Home_logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="99dp"
        android:layout_marginStart="68dp"
        android:fontFamily="@font/bree_serif"
        android:text="Test je kennis op het gebied van internetveiligheid"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Home_logo" />

    <Button
        android:id="@+id/button1"
        android:layout_width="191dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button3"
        android:layout_marginBottom="90dp"
        android:background="@drawable/home_button_shape"
        android:text="Test je kennis!"
        android:textColor="#E0E0E0"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="191dp"
        android:layout_height="38dp"
        android:layout_above="@+id/button1"
        android:layout_alignStart="@+id/button3"
        android:layout_marginBottom="20dp"
        android:background="@drawable/home_button_shape"
        android:text="Highscores"
        android:textColor="#E0E0E0"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="191dp"
        android:layout_height="38dp"
        android:layout_above="@+id/button2"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginBottom="16dp"
        android:background="@drawable/home_button_shape"
        android:text="Help"
        android:textColor="#E0E0E0"
        android:textStyle="bold" />

</RelativeLayout>
