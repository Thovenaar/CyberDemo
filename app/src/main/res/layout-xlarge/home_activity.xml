<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background_v2">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/home_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/home_digi_veilig_spel_button"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/home_button_shape_red"
        android:fontFamily="@font/bree_serif"
        android:gravity="center"
        android:onClick="startDigiveiligSpel"
        android:paddingBottom="15dp"
        android:text="@string/home_digiveilig_spel_button"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_3" />

    <Button
        android:id="@+id/home_quiz_spel_button"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/home_button_shape_yellow"
        android:fontFamily="@font/bree_serif"
        android:onClick="startDigiveiligToets"
        android:paddingBottom="15dp"
        android:text="@string/home_digiveilig_toets_button"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_digi_veilig_spel_button" />

    <ImageView
        android:id="@+id/frame_2"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/digiveilig_spel_star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_logo" />

    <ImageView
        android:id="@+id/frame_1"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/digiveilig_spel_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_logo" />

    <TextView
        android:id="@+id/home_star_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bree_serif"
        android:text="@string/home_sterren"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/frame_1"
        app:layout_constraintStart_toStartOf="@+id/frame_1"
        app:layout_constraintTop_toBottomOf="@+id/home_star" />

    <TextView
        android:id="@+id/home_toets_result_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bree_serif"
        android:text="@string/home_toets_resultaat"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/frame_2"
        app:layout_constraintStart_toStartOf="@+id/frame_2"
        app:layout_constraintTop_toBottomOf="@+id/home_toets_resultaat" />

    <ImageView
        android:id="@+id/home_star"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/digiveilig_spel_star"
        app:layout_constraintBottom_toBottomOf="@+id/frame_1"
        app:layout_constraintEnd_toEndOf="@+id/frame_1"
        app:layout_constraintStart_toStartOf="@+id/frame_1"
        app:layout_constraintTop_toTopOf="@+id/frame_1"
        app:srcCompat="@drawable/home_star" />

    <ImageView
        android:id="@+id/frame_3"
        android:layout_width="5dp"
        android:layout_height="61dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/digiveilig_spel_star"
        app:layout_constraintEnd_toStartOf="@+id/frame_2"
        app:layout_constraintStart_toEndOf="@+id/frame_1"
        app:layout_constraintTop_toBottomOf="@+id/home_logo" />

    <ImageView
        android:id="@+id/home_toets_resultaat"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/home_cijfer"
        app:layout_constraintBottom_toBottomOf="@+id/frame_2"
        app:layout_constraintEnd_toEndOf="@+id/frame_2"
        app:layout_constraintStart_toStartOf="@+id/frame_2"
        app:layout_constraintTop_toTopOf="@+id/frame_2"
        app:srcCompat="@drawable/home_toets_resultaat" />

    <Button
        android:id="@+id/home_score_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:background="@drawable/highscores_icon"
        android:onClick="startHighscore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/home_help_button" />

    <Button
        android:id="@+id/home_help_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/help_icon_v2"
        android:onClick="startHelp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>