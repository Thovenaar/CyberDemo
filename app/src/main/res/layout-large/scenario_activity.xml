<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scenario_background">

    <ImageView
        android:id="@+id/scenario_text"
        android:layout_width="469dp"
        android:layout_height="69dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/scenario_text"
        app:layout_constraintEnd_toStartOf="@+id/scenario_stop_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/scenario_text" />

    <ImageView
        android:id="@+id/scenario_image"
        android:layout_width="586dp"
        android:layout_height="365dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/scenario_image"
        android:onClick="clickedImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scenario_text"
        app:srcCompat="@drawable/scenario_phising_level_2" />

    <TextView
        android:id="@+id/scenario_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bree_serif"
        android:text="@string/scenario_question"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scenario_image" />

    <Button
        android:id="@+id/scenario_stop_button"
        android:layout_width="116dp"
        android:layout_height="106dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_shape_grey_round"
        android:fontFamily="@font/bree_serif"
        android:onClick="stopGame"
        android:text="@string/scenario_stop_button"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scenario_button_1"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/digiveilig_toets_button_shape_grey"
        android:fontFamily="@font/bree_serif"
        android:onClick="buttonClick"
        android:text="@string/scenario_button_one"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scenario_question" />

    <Button
        android:id="@+id/scenario_button_2"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/digiveilig_toets_button_shape_grey"
        android:fontFamily="@font/bree_serif"
        android:onClick="buttonClick"
        android:text="@string/scenario_button_two"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scenario_button_1" />

    <Button
        android:id="@+id/scenario_button_3"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/digiveilig_toets_button_shape_grey"
        android:fontFamily="@font/bree_serif"
        android:onClick="buttonClick"
        android:text="@string/scenario_button_three"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scenario_button_2" />

    <TextView
        android:id="@+id/scenario_gametimer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/scenario_gametimer"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/scenario_gametimer_image"
        app:layout_constraintTop_toBottomOf="@+id/scenario_text" />

    <ImageView
        android:id="@+id/scenario_gametimer_image"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/scenario_gametimer_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scenario_text"
        app:srcCompat="@drawable/timer_icon" />

</android.support.constraint.ConstraintLayout>